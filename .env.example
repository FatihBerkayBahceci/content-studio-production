# =====================================================================
# SEO TOOL SUITE - ENVIRONMENT VARIABLES
# =====================================================================
# Copy this file to .env.local for local development
# Copy this file to .env.production for production

# ---------------------------------------------------------------------
# FRONTEND (Next.js)
# ---------------------------------------------------------------------

# n8n Webhook URL
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678/webhook

# App Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="SEO Tool Suite"

# ---------------------------------------------------------------------
# BACKEND (n8n)
# ---------------------------------------------------------------------

# n8n Host Settings
N8N_HOST=localhost
N8N_PORT=5678
WEBHOOK_URL=http://localhost:5678/

# n8n Security (CHANGE IN PRODUCTION!)
N8N_ENCRYPTION_KEY=your-32-character-encryption-key
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-password

# ---------------------------------------------------------------------
# DATABASE (MySQL)
# ---------------------------------------------------------------------

# MySQL Connection
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=seo_tool_suite
MYSQL_ROOT_PASSWORD=123456

# MySQL User (Production)
MYSQL_USER=seo_suite_user
MYSQL_PASSWORD=your-secure-password

# ---------------------------------------------------------------------
# EXTERNAL APIS
# ---------------------------------------------------------------------

# DataForSEO API (Keyword Research)
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# Ahrefs API
AHREFS_API_TOKEN=your-ahrefs-api-token

# SEMrush API
SEMRUSH_API_KEY=your-semrush-api-key

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude) API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google APIs
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_CONSOLE_CREDENTIALS=path/to/credentials.json

# Google Ads API (Keyword Planner)
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-client-id
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_CUSTOMER_ID=your-customer-id
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-mcc-customer-id

# ---------------------------------------------------------------------
# REDIS (Optional)
# ---------------------------------------------------------------------

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ---------------------------------------------------------------------
# PRODUCTION ONLY
# ---------------------------------------------------------------------

# Domain Settings (Production)
# DOMAIN=your-domain.com
# N8N_DOMAIN=n8n.your-domain.com

# SSL Settings
# SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
# SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/privkey.pem
